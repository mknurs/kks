<!DOCTYPE html>
<html lang="sl">
<!-- head -->
<head>
  {% block head %}
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>
    {% if meta.title == site_title %}
        {{ site_title }}
    {% else %}
      {{ meta.title }} | {{ site_title }}
    {% endif %}
  </title>

  {% if meta.description %}
    <meta name="description" content="{{ meta.description|striptags }}" />
  {% endif %}

  {% if meta.robots %}
    <meta name="robots" content="{{ meta.robots }}" />
  {% else %}
    <meta name="robots" content="index follow" />
  {% endif %}

  {% if current_page %}
    <link rel="canonical" href="{{ current_page.url }}" />
  {% endif %}

  <!-- favicon -->
  <link rel="icon" type="image/svg+xml" href="{{ theme_url }}/img/favicon.svg">
  <link rel="alternate icon" href="{{ theme_url }}/img/favicon.png">

  <!-- og -->
  <meta property="og:title" content="{{ meta.title }}" />
  <meta property="og:type" content="article" />
  <meta property="og:image" content="{{ theme_url }}/img/og-image.png" />
  <meta property="og:url" content="{{ current_page.url }}" />
  <meta property="og:description" content="{{ meta.description|striptags }}" />
  {% endblock %}

  <!-- stylesheets -->
  {% block stylesheets %}
  <link rel="stylesheet" href="{{ theme_url }}/css/normalize.css" type="text/css" />
  <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
  {% endblock %}

  <!-- scripts -->
  {% block js_top %}
  <script async defer data-domain="kontrakurs.org" src="https://plausible.io/js/plausible.js"></script><!-- plausible -->
  {% endblock %}
</head>

<body class="{{ meta.template }}">
<!-- header -->
{% block header %}
{{ include("includes/header.twig") }}
{% endblock %}

<!-- navigation -->
{% block navigation %}
{{ include("includes/navigation.twig") }}
{% endblock %}

<!-- content -->
{% block content %}

{% endblock %}

<!-- footer -->
{% block footer %}
{{ include("includes/footer.twig") }}
{% endblock %}

<!-- scripts -->
{% block jsbot %}

{% endblock %}
</body>
</html>
